#:import chex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MainWindow:
	md_bg_color: chex("#D0E8F0")
	
	tool_bar : tool_bar
	add_card_button : add_card_button
	drawer : drawer
	
	CustomToolBar:
		id : tool_bar
		size_hint : None , None
		pos : 0, root.height - self.height
		size : root.width , root.height * 0.095

	
	CollectablesDrawer:
		size_hint : None , None
		pos : 0, 0
		size : root.width , root.height * 0.82
		
		Widget:
			size_hint : 1, 0.05
		
		ScrollView:
			size_hint : 1, 0.95
			
			MDGridLayout:
				id : drawer
				cols : 2
				adaptive_height : True
				padding : ( 50, 100 , 50 , 300)
				spacing : 30
				
	
	
	MDFloatingActionButton:
		id : add_card_button
		size_hint : None , None
		type : "standard"
		icon : "card-account-details-outline"
		theme_icon_color : "Custom"
		icon_color : chex("#FFFFFF")
		md_bg_color : chex("#226F8E")
		icon_size : min(root.size) * 0.11
		pos : ( root.width - self.width - (self.width * 0.3) ,  root.height * 0.04)
		
		on_release:
			root.card_opener.open()
		
	MDFloatingActionButton:
		size_hint : None , None
		type : "standard"
		icon : "alert-circle-outline"
		theme_icon_color : "Custom"
		icon_color : chex("#FFFFFF")
		md_bg_color : chex("#226F8E")
		icon_size : min(root.size) * 0.11
		pos : ( root.width - add_card_button.width - self.width - (self.width * 0.6) ,  root.height * 0.04)
		
		on_release:
			root.information_board.open()


<LoadingPage>:
	background_color : 0,0,0,0
	overlay_color : 0,0,0,0.5
	
	BoxLayout:
		orientation : "vertical"
		size_hint : 0.8 , 0.1
		pos_hint :  { "center_y" : 0.5 , "center_x" : 0.5 }
		
		FloatLayout:
			size_hint : 1 , 0.8
			Image:
				pos_hint : { "center_y" : 0.5 , "x" : root.image_pos }
				size_hint : 0.2 , 1
				keep_data : True
				keep_ratio : False
				allow_stretch : True
				source : root.image
		
		MDBoxLayout:
			size_hint : 1 ,  0.2
			radius : (24,)
			md_bg_color : chex("#D0E8F0")
			padding : dp(1)
			
			MDBoxLayout:
				size_hint : root.loading_pos , 1
				md_bg_color : chex("#101315") 
				radius : (24,)

<InformationBoard>:
	background_color : 0,0,0,0.2
	overlay_color : 0,0,0,0
	
	
	FloatLayout:
		
		MDBoxLayout:
			size_hint : None , None
			size : root.width * 0.8 , root.height * 0.58
			pos : (root.width - self.width) / 2 , ((root.height - self.height) / 2) - ( root.height * 0.03 )
			md_bg_color : chex("#D0E8F0")
			orientation : "vertical"
			padding : (dp(18) , dp(18))
			spacing : dp(10)
			
			Label:
				canvas.before:
					Color:
						rgba : chex("#226F8E")
					RoundedRectangle:
						pos : self.pos
						size : self.size
						radius : ( min(Window.size) * 0.05, )
				size_hint : 1 , 0.1
				text : "INFORMATION"
				font_name : "poppins_bold"
				font_size : min(self.size) * 0.5
				
			ScrollView:
				size_hint : 1 , 0.9
				
				MDGridLayout:
					cols : 1
					adaptive_height : True
					spacing : dp(2)
					
					InformationLabel:
						text : "    OWNER INFORMATION"
						font_name : "poppins_bold"
						font_size : min(Window.size) * 0.04
					
					InformationLabel:
						text : "       USER ID : " + root.user_id
						
					InformationLabel:
						text : f"       CARDS : " + str(root.cards)
					
					InformationLabel:
						text : f"       VALUES : " + str(root.values)
						
					InformationLabel:
						text : "       RARITY ; "
						
					InformationLabel:
						text : "               SS : " + str(root.rarity_list[0]) + "    A+ : "+ str(root.rarity_list[3]) +"    B : "+ str(root.rarity_list[6]) 
					
					InformationLabel:
						text : "               S+ : "+ str(root.rarity_list[1]) +"    A   : "+ str(root.rarity_list[4]) +"    C : "+ str(root.rarity_list[7]) 
						
					InformationLabel:
						text : "               S   : "+ str(root.rarity_list[2]) +"    B+ : "+ str(root.rarity_list[5]) 
					
					InformationLabel:
						text : "NOTE: Please do not clear the data or uninstall to preserve OWNER INFORMATION"
						color : chex("#85200C")
						font_name : "poppins_italic"
						font_size : min(Window.size) * 0.03			
					
					BoxLayout:
						size_hint : 1 , None
						height : min(Window.size) * 0.15
						padding : dp(5)
						
						Widget :
							size_hint : 0.25 , 1
							
						MDFillRoundFlatButton:
							size_hint : 0.5 ,  1
							text : "E X I T"
							pos_hint : { "center_x" : 0.5 }
							md_bg_color : chex("#85200C")
							font_name : "poppins_bold"
							font_size : min(self.size) * 0.45
							
							on_release:
								app.stop()
						
						Widget :
							size_hint : 0.25 , 1
							
					Widget:
						#SPACER
						size_hint : 1, None
						height : min(Window.size) * 0.05
					
					InformationLabel:
						text : "    APP INFORMATION"
						font_name : "poppins_bold"
						font_size : min(Window.size) * 0.04
					
					InformationLabel:
						text : "        DEVELOPER"
						font_name : "poppins_bold"
						font_size : min(Window.size) * 0.03
					Image:
						source : "pictures/guanz.png"
						size_hint : 1 , None
						keep_data : True
						keep_ratio : False
						allow_stretch : True
						height : min(Window.size) * 0.65
					InformationLabel:
						text : "[font=poppins_bold]Name : [/font] Ericson Mark A. Guanzon"
						font_size : min(Window.size) * 0.03
					InformationLabel:
						text : "[font=poppins_bold]COURSE : [/font] Bachelor of Science in Computer Science"
						font_size : min(Window.size) * 0.03
					InformationLabel:
						text : "[font=poppins_bold]YEAR : [/font] 4TH Year"
						font_size : min(Window.size) * 0.03
					
					

<InformationLabel@MDLabel>:
	size_hint: 1 , None
	height : self.texture_size[1]
	font_name : "poppins_reg"
	font_size : min(Window.size) * 0.035
	markup : True
					

<CardAnimation>:
	overlay_color : 0,0,0,0.2
	background_color : 0,0,0,0
	
	card : card
	
	FloatLayout:
		
		Card:
			id: card
			pos_hint : { "center_x" : 0.5 , "center_y" : 0.5}
			size_hint :None , None
			

<CardOpenerButton>:
	background_color : chex("#101315")
	color : "white"
	font_size : min(self.size) * 0.48
	font_name : "poppins_bold"
	text : "1"
	size_hint : 1 , 1
	
<CardOpener>:
	background_color : 0,0,0,0.2
	overlay_color : 0,0,0,0
	
	button_list : button_list
	
	FloatLayout:
		
		MDBoxLayout:
			size_hint : None , None
			size : root.width * 0.8 , root.height * 0.58
			pos : (root.width - self.width) / 2 , ((root.height - self.height) / 2) - ( root.height * 0.03 )
			md_bg_color : chex("#D0E8F0")
			orientation : "vertical"
			padding : (dp(18) , dp(18))
			spacing : dp(10)
			
			Label:
				canvas.before:
					Color:
						rgba : chex("#FFFFFF")
					RoundedRectangle:
						pos : self.pos
						size : self.size
						radius : ( min(Window.size) * 0.05, )
				size_hint : 1 , 0.15
				color : "black"
				text : len(root.password) * "*"
				font_size : min(self.size) * 0.5
				font_name : "poppins_bold"
				
			
			Label:
				size_hint : 1 , 0.1
				color : chex("#85200C")
				text : root.warning
				font_size : min(self.size) * 0.3
				font_name : "poppins_italic"
				text_size : self.width - (min(self.size) * 0.3) , None
				halign : "center"
				
			MDGridLayout:
				id : button_list
				size_hint : 1 , 0.7
				cols : 3
				rows : 3
				spacing : dp(10)
			
			MDFillRoundFlatButton:
				size_hint : 0.5 , 0.1
				text : "O P E N"
				pos_hint : { "center_x" : 0.5 }
				md_bg_color : chex("#226F8E")
				font_name : "poppins_bold"
				font_size : min(self.size) * 0.45
				
				on_release:
					root.getNewCard()
				

<Card>:
	size_hint : 1, None
	height : 650
	orientation : "vertical"
	md_bg_color : chex("#226F8E")
	radius : ( min(Window.size) * 0.03 , )
	padding : dp(2)
	opacity : 0 
	
	card_image : card_image
	
	BoxLayout:
		size_hint : 1 , 0.12
		
		MDLabel:
			text : "   VALUE : " + root.value
			font_name : "poppins_bold"
			font_size : min(self.size) * 0.3
			color : "white"
			opacity : 0 if root.isAnimating else 1
		
		Label:
			text : "N E W" if root.isNew else ""
			font_name : "poppins_black"
			font_size : min(self.size) * 0.3
			color : "yellow"
			opacity : 0 if root.isAnimating else 1
	
	Image:
		id : card_image
		size_hint : 1, 0.4
		opacity : 0 if root.isAnimating else 1
	
	Label:
		size_hint : 1 , 0.38
		text_size : self.width - (min(self.size) * 0.3) , None
		text : root.quote # letter up to 80
		halign : "center"
		font_size : min(self.size) * 0.13
		font_name : "poppins_italic"
		opacity : 0 if root.isAnimating else 1
	
	Label:
		size_hint : 1 , 0.1
		text : root.rarity
		font_name : "poppins_bold"
		font_size : min(self.size) * 0.7
		opacity : 0 if root.isAnimating else 1
		


<CollectablesDrawer@BoxLayout>:
	canvas.before:
		Color:
			rgba : chex("#FFFFFF")
		RoundedRectangle:
			pos : self.pos
			size : self.size
			radius : ( min(Window.size) * 0.15 , min(Window.size) * 0.15 , 0 , 0)
	orientation : "vertical"

<CustomToolBar@Label>:
	canvas.before:
		Color:
			rgba : chex("#101315")
		RoundedRectangle:
			pos: self.pos
			size : self.size
			radius : ( 0 , 0 ,  min(Window.size) * 0.05 , min(Window.size) * 0.05 )
	
	text : "COLLECTABLES"
	font_size : min(Window.size) * 0.08
	font_name : "poppins_black"
